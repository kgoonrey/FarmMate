<UserControl x:Class="UserInterface.Controls.NumericControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.Controls" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" x:Name="uc" >
    <Grid>
        <TextBox x:Name="uiTextBox" TextWrapping="Wrap" Width="175" VerticalAlignment="Top" HorizontalContentAlignment="Right" Height="23"  Text="{Binding Path=DataSource, ElementName=uc}" KeyDown="uiTextBox_KeyDown" GotFocus="uiTextBox_GotFocus" MouseDown="uiTextBox_MouseDown"  />
        
    </Grid>
</UserControl>
